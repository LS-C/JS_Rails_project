

<%= form_for(@item) do |f| %>
    Name: <%= f.text_field :name %><br>
    Category: <%= f.text_field :category %><br>
    Price: $<%= f.text_field :price %><br>
    Item Description: <%= f.text_field :description %><br>
    Number of Items: <%= f.text_field :inventory %><br>
    <%= hidden_field_tag :seller_id, @user.id %><br>

    <%= f.submit %>
<%end%>



<script type="text/javascript">
    $('form').submit(function(e) {
        e.preventDefault()
        var values = $(this).serialize();
        console.log(values)
        posting = $.post('/items', values)
        posting.done(function(values) {
            console.log('success')
        })
    })
</script>


